@model IEnumerable<AdminReviewViewModel>

@{
    ViewData["Title"] = "All Reviews";
}

<style>
    #div {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .myContainer {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        color: #333;
        font-weight: bold;
    }

    tr:hover {
        background-color: #f9f9f9;
    }

    .no-reviews {
        text-align: center;
        color: #888;
    }
</style>

<h1 class="text-center">Reviews</h1>
@if (Model.Any())
{
    <div class="myContainer">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Rating</th>
                    <th>IsReviewed</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var review in Model)
                {
                    <tr>
                        <td>@review.Name</td>
                        <td>@review.Description</td>
                        <td>@review.Rating</td>
                        @if (review.IsReviewed)
                        {
                            <td>Previewed</td>
                        }else
                        {
                            <td>
                                <form asp-controller="Review"
                                      asp-area="Admin" asp-action="Reviewed" asp-route-Id="@review.Id" method="post">
                                    <input class="btn btn-primary" type="submit" value="Reviewed" />
                                </form>
                            </td>
                        }
                        <td><a class="btn btn-lg btn-danger" asp-route-id="@review.Id" asp-action="Delete">Delete</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    
}
else
{
    <p class="no-reviews">No reviews available.</p>
}